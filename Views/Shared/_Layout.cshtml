<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RVBARBER</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RVBARBER.styles.css" asp-append-version="true" />    
    <link rel="icon" href="/images/logo.jpg" type="image/jpg"/>
    <link href="/assets/css/fontawesome.css" rel="stylesheet" />
    <link href="/assets/css/brands.css" rel="stylesheet" />
    <link href="/assets/css/solid.css" rel="stylesheet" />
    <link href="/assets/css/regular.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar desktop -->
    <header class="d-none d-xl-flex" id="navbar-desktop">
        <nav class="navbar navbar-expand-sm fixed-top">
            <div class="container">
                <div class="d-flex align-items-center">
                    <img src="/images/logoRV_trasp.png" width="60" height="60">
                    <img src="/images/rvbarber_trasp.png" width="250" height="150" class="img-fluid mt-3">
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Pages" asp-action="Index">HOME</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link" asp-controller="Pages" asp-action="Galleria">GALLERIA</a>
                    </li>
                    <li class="nav-item px-3">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-controller="Reservations" asp-action="Index">PRENOTA</a>
                        }
                        else
                        {
                            <a class="nav-link" href="" data-bs-toggle="modal" data-bs-target="#modal-login">PRENOTA</a>
                        }
                    </li>
                    @if((User.Identity != null && User.Identity.IsAuthenticated))
                    {
                        <li class="nav-item ps-3">
                            <div class="dropdown">
                                <a class="nav-link small" href="" data-bs-toggle="dropdown">
                                    <i class="far fa-user"></i>&nbsp; @User.Identity.Name &nbsp;<i class="fas fa-chevron-down small"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-dark">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Il mio profilo</a>
                                    <a class="dropdown-item" asp-controller="Reservations" asp-action="Index">Prenota ora</a>
                                    <div class="dropdown-divider"></div>
                                    @if(User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.Role)?.Value == "admin")
                                    {
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Home"><i class="fas fa-cog small"></i>&nbsp;&nbsp;Admin</a>
                                        <div class="dropdown-divider"></div>
                                    }
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Esci</a>
                                </div>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ps-4">
                            <a class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modal-login">Accedi</a>
                        </li>
                        <li class="nav-item ps-2">
                            <a class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#modal-registration">Registrati</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <!-- Navbar mobile -->
    <header class="d-xl-none d-flex" id="navbar-mobile">
        <nav class="navbar navbar-expand-sm fixed-top" >
            <div class="container">
                <div class="d-flex align-items-center">
                    <img src="/images/logoRV_trasp.png" width="40" height="40">
                    <img src="/images/rvbarber_trasp.png" width="200" height="60" class="img-fluid mt-2">
                </div>
                <a class="btn btn-lg btn-clear" id="btn-menu" style="cursor: pointer;" onclick="openMenu(this)">
                    <i class="fas fa-bars text-white"></i>
                </a>
            </div>
        </nav>
    </header>

    <!-- Menu navigazione a comparsa (mobile) --> 
    <div id="mobile-menu">
        <img src="/images/logoRV_trasp.png" id="logo-menu">
        @if(User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div class="dropdown" id="user-menu">
                <a class="nav-link" href="" data-bs-toggle="dropdown">
                    <i class="far fa-user"></i>&nbsp; @User.Identity.Name &nbsp;<i class="fas fa-chevron-down small"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-dark">
                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Il mio profilo</a>
                    <a class="dropdown-item" asp-controller="Reservations" asp-action="Index">Prenota ora</a>
                    <div class="dropdown-divider"></div>
                    @if(User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.Role)?.Value == "admin")
                    {
                        <a class="dropdown-item" asp-controller="Admin" asp-action="Home"><i class="fas fa-cog small"></i>&nbsp;&nbsp;Admin</a>
                        <div class="dropdown-divider"></div>
                    }
                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Esci</a>
                </div>
            </div>
        }
        <button id="close-menu" onclick="closeMenu()">&times;</button>
        <div id="link-menu">
            @if(!(User.Identity != null && User.Identity.IsAuthenticated))
            {
                <div class="d-flex align-items-center mb-5">
                    <a class="btn btn-light me-2" data-bs-toggle="modal" data-bs-target="#modal-login">Accedi</a>
                    <span class="text-muted">o</span> 
                    <a class="btn btn-outline-light ms-2" data-bs-toggle="modal" data-bs-target="#modal-registration">Registrati</a>
                </div>
            }
            <a class="nav-link" asp-controller="Pages" asp-action="Index">HOME</a>
            <a class="nav-link" asp-controller="Pages" asp-action="Galleria">GALLERIA</a>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a class="nav-link" asp-controller="Reservations" asp-action="Index">PRENOTA</a>
            }
            else
            {
                <a class="nav-link" href="" data-bs-toggle="modal" data-bs-target="#modal-login">PRENOTA</a>
            }
        </div>
        <footer class="text-muted" style="position: absolute; bottom: 1.5rem; font-size: 80%">
            <div class="text-center">
                <span><i class="far fa-copyright"></i> 2023 - RVBARBER - P.Iva 02137550386</span>
            </div>
        </footer>
    </div>

    <!-- Pagina -->
    <main class="pb-5" id="main-content">
        @if(ViewData["Title"]!.ToString() != "Home")
        {
            <div class="header-container">
                <div class="overlay"></div>

                <div class="title-box mt-4">
                    <h1 class="mb-4">@ViewData["Title"]</h1>
                    <h5> <a asp-controller="Pages" asp-action="Index" style="text-decoration: none; color: #EDF2F9">Home</a> / <span class="font-bold text-accent">@ViewData["Title"]</span></h5>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Modale di login -->
    <div class="modal fade" id="modal-login">
        <div class="modal-dialog modal-fullscreen-sm-down">
            <div class="modal-content text-dark">
                <div class="modal-header p-2">
                    <button type="button" class="btn ms-auto" data-bs-dismiss="modal"><i class="fas fa-times"></i></button>
                </div>
                <div class="px-5">
                    <form id="login-form" data-url="@Url.Action("Login", "Account")">
                        <h4 class="my-4 font-bold">Accedi</h4>
                        <div style="display: none;" class="alert alert-danger small py-2" id="fail-login">Email o password non corretti</div>
                        <div class="mb-3">
                            <input type="email" class="form-control login-form" name="email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control login-form" name="password" placeholder="Password" required>
                        </div>
                        <div class="text-center pb-4 mt-5">
                            <button type="submit" class="btn btn-dark w-100 mb-3 py-2">Accedi</button>
                            <p class="text-muted small">Non sei ancora registrato?
                                <a class="text-dark" id="to-registration" style="cursor: pointer;">Registrati</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modale di registrazione -->
    <div class="modal fade" id="modal-registration">
        <div class="modal-dialog modal-fullscreen-sm-down">
            <div class="modal-content text-dark">
                <div class="modal-header p-2">
                    <button type="button" class="btn ms-auto" data-bs-dismiss="modal"><i class="fas fa-times"></i></button>
                </div>
                <div class="px-5">
                    <form id="registration-form" data-url="@Url.Action("Registration", "Account")">
                        <h4 class="my-4 font-bold">Registrazione</h4>
                        <div style="display: none;" class="alert alert-danger small py-2" id="fail-registration">Email già registrata</div>
                        <div class="mb-3">
                            <input type="text" class="form-control login-form" name="name" placeholder="Nome" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control login-form" name="surname" placeholder="Cognome" required>
                        </div>
                         <div class="mb-3">
                            <input type="tel" class="form-control login-form" name="phone" placeholder="Telefono" pattern="[0-9]{10}" required>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control login-form" name="email" placeholder="Email" required>
                        </div>
                        <div class="mb-4">
                            <input type="password" class="form-control login-form" name="password" placeholder="Password" minlength="8" required>
                        </div>
                        <div class="text-center pb-4 mt-5">
                            <button type="submit" class="btn btn-dark w-100 mb-3 py-2">Registrati</button>
                            <p class="text-muted small">Hai già un account?
                                <a class="text-dark" id="to-login" style="cursor: pointer;">Accedi</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    
    @if(User.Identity != null && User.Identity.IsAuthenticated)
    {
        @if(User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.Role)?.Value == "admin")
        {
            <div id="footer-navbar" class="navbar fixed-bottom">
                <div class="grid-container-admin">
                    <a class="grid-item" asp-action="Index" asp-controller="Pages"> 
                        <i class="fas fa-home"></i>
                        <p class="mb-0">Home</p>
                    </a>
                    <a class="grid-item" asp-action="Index" asp-controller="Reservations">
                        <i class="far fa-calendar-alt"></i>
                        <p class="mb-0">Prenota</p>
                    </a>
                    <a class="grid-item" asp-action="Profile" asp-controller="Account">
                        <i class="far fa-user"></i>
                        <p class="mb-0">Profilo</p>
                    </a>
                    <a class="grid-item" asp-action="Home" asp-controller="Admin">
                        <i class="fas fa-cog"></i>
                        <p class="mb-0">Admin</p>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div id="footer-navbar" class="navbar fixed-bottom" style="display: none;">
                <div class="grid-container">
                    <a class="grid-item" asp-action="Index" asp-controller="Pages"> 
                        <i class="fas fa-home"></i>
                        <p class="mb-0">Home</p>
                    </a>
                    <a class="grid-item" asp-action="Index" asp-controller="Reservations">
                        <i class="far fa-calendar-alt"></i>
                        <p class="mb-0">Prenota</p>
                    </a>
                    <a class="grid-item" asp-action="Profile" asp-controller="Account">
                        <i class="far fa-user"></i>
                        <p class="mb-0">Profilo</p>
                    </a>
                </div>
            </div>
        }
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
